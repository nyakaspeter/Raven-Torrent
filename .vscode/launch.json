  "version": "0.2.0",
  "configurations": [
    {
      "name": "File Storage",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": ["-log", "-storagetype", "file", "-dir", "\\wrserver"]
    },
    {
      "name": "Memory Storage 64M",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": ["-log"]
    },
    {
      "name": "Memory Storage 128M",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": ["-log", "-memorysize", "128"]
    }
  ]
}
