{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch API",
            "type": "shell",
            "command": "go run .",
            "options": {
                "cwd": "./api"
            }
        },
        {
            "label": "Build API",
            "type": "shell",
            "command": "./build-and-archive-all.bat",
            "options": {
                "cwd": "./scripts"
            }
        },
        {
            "label": "Launch desktop app",
            "type": "shell",
            "command": "wails dev"
        },
        {
            "label": "Build desktop app",
            "type": "shell",
            "command": "wails build"
        }
    ]
}